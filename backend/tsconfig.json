{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
